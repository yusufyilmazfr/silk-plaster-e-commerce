@model IEnumerable<SilkPlaster.Entities.Product>

@{
    Layout = "~/Views/Shared/admin-navbar-footer.cshtml";
}


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="icon-gradient pe-7s-diskette bg-happy-itmeo"></i>
            </div>
            <div>
                Ürünler
                <div class="page-title-subheading">
                    @*In this section you can view and edit the categories of products.*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Ürünler</h5>
            <div class="table-responsive">
                <table class="mb-0 table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(model => model.FirstImage)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.LastPrice)</th>
                            <th>@Html.DisplayNameFor(model => model.NewPrice)</th>
                            <th>@Html.DisplayNameFor(model => model.InStock)</th>
                            <th>@Html.DisplayNameFor(model => model.IsContinued)</th>
                            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td><img src="~/images/products/@item.FirstImage" width="50" /></td>
                                <td>
                                    @if (item.Name.Length > 25)
                                    {
                                        <span>@item.Name.Substring(0, 25)</span>
                                    }
                                    else
                                    {
                                        <span>@item.Name</span>
                                    }
                                </td>
                                <td>@item.LastPrice.ToString("c")</td>
                                <td>@item.NewPrice.ToString("c")</td>
                                <td>@item.InStock</td>
                                <td>@item.IsContinued</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    @Html.ActionLink("Güncelle", "Edit", "Product", new { area = "Admin", Id = item.Id }, new { @class = "mb-1 mr-1 btn-transition btn btn-outline-info" })

                                    @Html.ActionLink("Sil", "Delete", "Product", new { area = "Admin", Id = item.Id }, new { @class = "mb-1 mr-1 btn-transition btn btn-outline-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


