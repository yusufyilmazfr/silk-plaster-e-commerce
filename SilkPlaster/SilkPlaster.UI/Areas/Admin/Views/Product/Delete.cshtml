@model SilkPlaster.Entities.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/admin-navbar-footer.cshtml";
}


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-albums icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Ürün Silme
                <div class="page-title-subheading">
                    @*In this section you can view and edit the categories of products.*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Ürün Silme</h5>
            <div class="mb-3 text-center card card-body">
                <img src="~/images/products/@Model.FirstImage" alt="@Model.Name" width="150" class="mx-auto" />
                <h4>@Model.Name</h4>
                <h5>Bu ürünü silmek istediğinize emin misiniz?</h5>
            </div>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(i => i.Id)
                <button type="submit" class="mb-1 mr-1 btn-transition btn btn-outline-danger">Sil</button>
                <a class="mb-1 mr-1 btn-transition btn btn-outline-alternate" href="/Admin/Product">Listeye Geri Dön</a>
            }
        </div>
    </div>
</div>
