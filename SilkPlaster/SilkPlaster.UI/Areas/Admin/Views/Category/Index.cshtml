@model IEnumerable<SilkPlaster.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin-navbar-footer.cshtml";
}


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-albums icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Kategoriler
                <div class="page-title-subheading">
                    @*In this section you can view and edit the categories of products.*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Kategoriler</h5>
            <div class="table-responsive">
                <table class="mb-0 table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    @Html.ActionLink("Güncelle", "Edit", "Category", new { area = "Admin", Id = item.Id }, new { @class = "mb-1 mr-1 btn-transition btn btn-outline-info" })

                                    @Html.ActionLink("Sil", "Delete", "Category", new { area = "Admin", Id = item.Id }, new { @class = "mb-1 mr-1 btn-transition btn btn-outline-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>