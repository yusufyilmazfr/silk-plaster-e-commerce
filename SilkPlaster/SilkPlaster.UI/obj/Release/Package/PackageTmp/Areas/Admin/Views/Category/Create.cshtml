@model SilkPlaster.Entities.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin-navbar-footer.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-albums icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Kategori Ekleme
                <div class="page-title-subheading">
                    @*Build whatever layout you need with our Architect framework.*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="tab-content">
    <div class="tab-pane tabs-animation fade active show" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h5 class="card-title">Kategori Ekleme</h5>

                @using (Html.BeginForm("Create", "Category", FormMethod.Post))
                {

                    @Html.ValidationSummary(false)

                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="position-relative form-group">
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Kategori adı" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="position-relative form-group">
                                @Html.LabelFor(model => model.Description)
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Kategori açıklaması" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="mb-1 mr-1 btn-transition btn btn-outline-primary">Oluştur</button>

                    @Html.ActionLink("Listeye Geri Dön", "Index", new { controller = "Category" }, new { @class = "mb-1 mr-1 btn-transition btn btn-outline-alternate" })
                }
            </div>
        </div>
    </div>
</div>

