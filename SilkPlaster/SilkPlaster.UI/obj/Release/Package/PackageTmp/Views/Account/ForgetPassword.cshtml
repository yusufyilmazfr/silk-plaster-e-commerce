@using SilkPlaster.Common.HelperClasses
@{
    Layout = "~/Views/Shared/member-navbar-footer.cshtml";
}

<main id="mt-main">
    <!-- Mt Content Banner of the Page -->
    <section class="mt-contact-banner" style="background-image: url(/images/login-background.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h1>ŞİFRE SIFIRLAMA</h1>
                    <nav class="breadcrumbs">
                        <ul class="list-unstyled">
                            <li><a href="/">Anasayfa<i class="fa fa-angle-right"></i></a></li>
                            <li>Şifremi Unuttum</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- Mt Content Banner of the Page end -->
    <!-- Mt About Section of the Page -->
    <section class="mt-about-sec" style="padding-bottom: 0;">
        <div class="container">
            <div class="row">

            </div>
        </div>
    </section>
    <!-- Mt About Section of the Page -->
    <!-- Mt Detail Section of the Page -->
    <section class="mt-detail-sec toppadding-zero">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-sm-push-2">
                    <div class="holder" style="margin: 0;">
                        <div class="mt-side-widget">
                            <header>
                                <h2 style="margin: 0 0 5px;">ŞİFREMİ SIFIRLA</h2>
                            </header>
                            @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false)
                                <fieldset>
                                    <input class="input" placeholder="E-posta adresiniz.." type="email" name="email" id="email">

                                    <button type="submit" class="btn-type1">Yeni Şifre Gönder</button>
                                    <br />
                                    @{
                                        var success = TempData["success"];

                                        if (!ObjectHelper.ObjectIsNull(success))
                                        {
                                            <br />

                                            <div class="alert alert-success" role="alert" style="color: #3c763d; background-color: #dff0d8;border-color:#d6e9c6; padding: 15px; margin-bottom: 20px; border: 1px solid transparent;border-radius: 4px;">
                                                @success.ToString()
                                            </div>
                                        }
                                    }


                                </fieldset>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Mt Detail Section of the Page end -->
</main>