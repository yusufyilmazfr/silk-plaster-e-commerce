@using  SilkPlaster.Common.HelperClasses
@model SilkPlaster.Entities.InComingMail
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/member-navbar-footer.cshtml";
}
<main id="mt-main">
    <!-- Mt Contact Detail of the Page -->
    <div class="mt-contact-detail wow fadeInUp" data-wow-delay="0.4s">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-4 mt-paddingbottomxs text-center">
                    <span class="icon"><i class="fa fa-map-marker"></i></span>
                    <strong class="title">ADRES</strong>
                    <address>
                        Atalar Mahallesi Atalar Caddesi Gök Sokak No: 5
                        <br>Kartal/İstanbul
                    </address>
                </div>
                <div class="col-xs-12 col-sm-4 mt-paddingbottomxs text-center">
                    <span class="icon"><i class="fa fa-phone"></i></span>
                    <strong class="title">TELEFON</strong>
                    <a href="tel:5549127005">+90 (554) 912 7005</a>
                </div>
                <div class="col-xs-12 col-sm-4 mt-paddingbottomxs text-center">
                    <span class="icon"><i class="fa fa-envelope-o"></i></span>
                    <strong class="title">E MAİL</strong>
                    <a href="mailto:info@nishplas.com">info@nishplas.com</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Mt Contact Detail of the Page end -->
    <!-- Mt Form Section of the Page -->
    <section class="mt-form-sec wow fadeInUp" data-wow-delay="0.4s">
        <div class="container">
            <div class="row">
                <header class="col-xs-12 text-center header">
                    <h2>Aklınıza takılan bir şeyler mi var?</h2>
                    <p>Bayilik talebi, soru, görüş, öneri, fiyat analizi gibi istediğiniz her konuda soru sorabilirsiniz. :) </p>
                </header>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <!-- Contact Form of the Page -->
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "contact-form" }))
                    {
                        @Html.ValidationSummary(false)
                        <fieldset>
                            @Html.TextBoxFor(model => model.PersonFirstName, new { @class = "form-control", placeholder = "İsim", required = "required" })
                            @Html.TextBoxFor(model => model.PersonLastName, new { @class = "form-control", placeholder = "Soyisim", required = "required" })
                            @Html.TextBoxFor(model => model.PersonEmail, new { @class = "form-control", placeholder = "Email", required = "required", type = "email" })
                            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Konu", required = "required" })
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Mesaj", required = "required" })

                            <button class="btn-type3" type="submit">Gönder</button>
                        </fieldset>
                    }
                    <!-- Contact Form of the Page end -->
                    @{
                        var success = TempData["success"];

                        if (!ObjectHelper.ObjectIsNull(success))
                        {
                            <br />

                            <div class="alert alert-success" role="alert" style="color: #3c763d; background-color: #dff0d8;border-color:#d6e9c6; padding: 15px; margin-bottom: 20px; border: 1px solid transparent;border-radius: 4px;">
                                @success.ToString()
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </section>
    <!-- Mt Form Section of the Page -->
</main>
<!-- footer of the Page -->
