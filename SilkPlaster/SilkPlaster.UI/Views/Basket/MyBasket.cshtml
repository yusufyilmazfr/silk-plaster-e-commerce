@model List<SilkPlaster.UI.Models.BasketModel>


@if (Model.Count == 0)
{
    <h1 style="text-align: center; text-decoration: underline; margin-top:100px; margin-bottom: 100px">
        Sepetiniz Boş!
    </h1>
    return;
}

<main id="mt-main">

    <!-- Mt Product Table of the Page -->
    <div class="mt-product-table wow fadeInUp" data-wow-delay="0s" style="visibility: visible; animation-delay: 0s; animation-name: fadeInUp;">
        <div class="container">
            <div class="row border">
                <div class="col-xs-12 col-sm-6">
                    <strong class="title">ÜRÜN</strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                    <strong class="title">FİYAT</strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                    <strong class="title">ADET</strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                    <strong class="title">TOPLAM</strong>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row border">
                    <div class="col-xs-12 col-sm-2">
                        <div class="img-holder">
                            <img src="~/images/products/@item.Product.FirstImage" width="105" height="105" alt="@item.Product.Name">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <strong class="product-name">
                            @if (item.Product.Name.Length > 30)
                            {
                                <span>@item.Product.Name.Substring(0, 30)</span>
                            }
                            else
                            {
                                <span>@item.Product.Name</span>
                            }
                        </strong>
                    </div>
                    <div class="col-xs-12 col-sm-2">
                        <strong class="price">@item.Product.NewPrice.ToString("c")</strong>
                    </div>
                    <div class="col-xs-12 col-sm-2">
                        <div class="row-val">
                            <input class="y-product-quantity" style="margin-top:69px" min="0" type="number" id="qty" value="@item.Quantity">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-2">
                        <strong class="price">@((item.Quantity * item.Product.NewPrice).ToString("c"))</strong>
                        <a href="#" onclick="RemoveProductInBasket(@item.Product.Id)"><i class="fa fa-close"></i></a>
                    </div>
                </div>
            }

        </div>
    </div>
    <!-- Mt Product Table of the Page end -->
    <!-- Mt Detail Section of the Page -->
    <section class="mt-detail-sec style1 wow fadeInUp" data-wow-delay="0.4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-offset-6 col-sm-6">
                    <h2>CART TOTAL</h2>
                    <ul class="list-unstyled block cart">
                        <li>
                            <div class="txt-holder">
                                <strong class="title sub-title pull-left">CART SUBTOTAL</strong>
                                <div class="txt pull-right">
                                    <span>@Model.Sum(i => i.Product.NewPrice * i.Quantity).ToString("c")</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="txt-holder">
                                <strong class="title sub-title pull-left">SHIPPING</strong>
                                <div class="txt pull-right">
                                    <strong>Free Shipping</strong>
                                </div>
                            </div>
                        </li>
                        <li style="border-bottom: none;">
                            <div class="txt-holder">
                                <strong class="title sub-title pull-left">CART TOTAL</strong>
                                <div class="txt pull-right">
                                    <span>@Model.Sum(i => i.Product.NewPrice * i.Quantity).ToString("c")</span>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <a href="#" class="process-btn">Siparişe Devam Et <i class="fa fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </section>
    <!-- Mt Detail Section of the Page end -->
</main>
